<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ringdroid.activity.VideoEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.ringdroid.activity.TextureVideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>

            <com.ringdroid.view.CutView
                android:id="@+id/cut_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/info"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/cut_info"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <!--ImageView
             android:id="@+id/bkgnd"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:scaleType="centerCrop"
             android:src="@drawable/bkgnd"-->

            <com.ringdroid.view.WaveformView
                android:id="@+id/waveform"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.ringdroid.view.MarkerView
                android:id="@+id/startmarker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/start_marker"
                android:nextFocusDown="@+id/endmarker"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/marker_left"/>

            <com.ringdroid.view.MarkerView
                android:id="@+id/endmarker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/end_marker"
                android:nextFocusUp="@+id/startmarker"
                android:nextFocusDown="@+id/info"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/marker_right" />

        </RelativeLayout>

        <LinearLayout
            style="@style/ToolbarBackground"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center">

            <Button
                android:id="@+id/back"
                style="@android:style/MediaButton"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:onClick="back"
                android:text="返回" />

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/rew"
                style="@android:style/MediaButton"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@string/rewind"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/play"
                style="@android:style/MediaButton"
                android:layout_width="71dp"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@string/play"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/ffwd"
                style="@android:style/MediaButton"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@string/ffwd"
                android:src="@android:drawable/ic_media_next" />

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/cut"
                style="@android:style/MediaButton"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@string/rewind"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:onClick="startClipVideo"
                android:text="裁剪" />

        </LinearLayout>

        <LinearLayout style="@style/HorizontalDividerTop" />

        <LinearLayout style="@style/HorizontalDividerBottom" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
